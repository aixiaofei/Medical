<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_select_background">

    <RelativeLayout
        android:id="@+id/personal_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorButton_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true">

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"/>

            /*填写昵称和ID*/
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp">
                <TextView
                    android:id="@+id/personal_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/personal_id"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            /*填写昵称和ID*/

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/more_white"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

    </RelativeLayout>
    /*个人信息展示，top*/
    <View
        android:id="@+id/below_top_line"
        android:layout_below="@id/personal_top"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorWhite"/>

    /*个人信息*/
    <LinearLayout
        android:id="@+id/my_messa"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/below_top_line"
        android:background="@color/colorWhite"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/personal_message" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="个人信息"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/change_personal_message"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/more"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    /*个人信息*/

    /*我的钱包*/
    <LinearLayout
        android:id="@+id/my_pur"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:layout_below="@id/my_messa"
        android:background="@color/colorWhite"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/my_purse"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="我的钱包"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/change_my_purse"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/more"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    /*我的钱包*/

    /*我的订单*/
    <LinearLayout
        android:id="@+id/my_menu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:layout_below="@id/my_pur"
        android:background="@color/colorWhite"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/my_deal"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="我的订单"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/change_my_menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/more"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    /*我的订单*/

    /*设置*/
    <LinearLayout
        android:id="@+id/my_set"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:layout_below="@id/my_menu"
        android:background="@color/colorWhite"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/set"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="设置"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/change_my_set"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/more"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    /*设置*/
</RelativeLayout>