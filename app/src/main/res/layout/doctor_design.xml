<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/top_first"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorButton_background"
        android:layout_alignParentTop="true">

        /*位置设置*/
            <ImageView
                android:id="@+id/map"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/address_white"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/top_first_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:text="地图模式"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_vertical"/>
        /*位置设置*/


        /*搜索框设置*/
        <LinearLayout
            android:id="@+id/search_line"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/search_text">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/search"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/search_message"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="搜索"
                android:textSize="14sp" />
        </LinearLayout>
        /*搜索框设置*/

        /*消息设置*/
            <ImageView
                android:id="@+id/accept_message"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/comments_white"
                android:layout_gravity="center_vertical" />
        /*消息设置*/

    </LinearLayout>

    /*内容*/

    <FrameLayout
        android:id="@+id/main"
        android:layout_below="@+id/top_first"
        android:layout_above="@+id/buttom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/main_fragment"
            android:name="Frag.DoctorList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/buttom"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/home_pag"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="35dp"
                android:layout_alignTop="@+id/search_doctor_page"
                android:layout_toLeftOf="@+id/search_doctor_page"
                android:background="@drawable/home_page" />
            <ImageView
                android:id="@+id/search_doctor_page"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/search_doctor"
                android:layout_marginRight="35dp"
                android:layout_alignTop="@+id/my_doctor_page"
                android:layout_toLeftOf="@+id/my_doctor_page"/>
            <ImageView
                android:id="@+id/my_doctor_page"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/my_doctor" />
            <ImageView
                android:id="@+id/search_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/menu"
                android:layout_marginLeft="35dp"
                android:layout_alignTop="@+id/my_doctor_page"
                android:layout_toRightOf="@+id/my_doctor_page"/>
            <ImageView
                android:id="@+id/my_page"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/my"
                android:layout_marginLeft="35dp"
                android:layout_alignTop="@+id/my_doctor_page"
                android:layout_toRightOf="@+id/search_menu"/>
    </RelativeLayout>
</RelativeLayout>

