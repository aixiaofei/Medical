    <!--/*内容*/-->
    <FrameLayout
        android:id="@+id/main"
        android:layout_below="@+id/top_first"
        android:layout_above="@+id/buttom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>



    <LinearLayout
        android:id="@+id/buttom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <RelativeLayout
            android:id="@+id/frag_first"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/home_page_pic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/home_page" />

            <TextView
                android:id="@+id/home_page_text"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="首页"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:textColor="@color/default_text_seclector"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frag_second"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/search_doctor_page_pic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/search_doctor" />

            <TextView
                android:id="@+id/search_doctor_page_text"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="发布"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:textColor="@color/default_text_seclector"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frag_third"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/my_doctor_page_pic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/my_doctor" />

            <TextView
                android:id="@+id/my_doctor_page_text"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="医生"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:textColor="@color/default_text_seclector"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frag_forth"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/search_menu_pic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/menu" />

            <TextView
                android:id="@+id/search_menu_text"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="订单"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:textColor="@color/default_text_seclector"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_page"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/my_page_pic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/my" />

            <TextView
                android:id="@+id/my_page_text"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="我的"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:textColor="@color/default_text_seclector"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>