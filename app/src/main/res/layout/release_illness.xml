<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    /*标题栏设置*/
    <RelativeLayout
        android:id="@+id/illness_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorButton_background"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/design_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back_white"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="返回"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/design_back"
                android:textSize="18dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="155dp"
            android:layout_height="30dp"
            android:text="发布病情"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    /*标题栏设置*/

    <EditText
        android:id="@+id/illness_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/release_illness_hint_remind"
        android:layout_below="@id/illness_top"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:textSize="14dp"
        android:maxLines="10"/>
    <View
        android:id="@+id/remind_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line"
        android:layout_below="@id/illness_remind"/>

    <RelativeLayout
        android:id="@+id/center_part"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/remind_line"
        android:layout_marginTop="2dp"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="就诊人"
            android:textSize="18dp"
            android:layout_marginLeft="8dp" />
        <Button
            android:id="@+id/illness_person_button"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/addition"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/add_above_picture"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/center_part"
        android:background="@color/color_line"/>

    <LinearLayout
        android:id="@+id/picture_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@id/add_above_picture">
        <TextView
            android:id="@+id/add_picture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/add_picture" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="@string/add_picture_remind"/>

    </LinearLayout>

    <View
        android:id="@+id/picture_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/picture_part"
        android:layout_marginTop="3dp"
        android:background="@color/color_line"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/picture_line"
        android:background="@drawable/button_shape"
        android:text="提交"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_centerInParent="true"/>

</RelativeLayout>