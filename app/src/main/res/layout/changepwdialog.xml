<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/account_password_background"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:background="@drawable/yanzhengma" />

        <EditText
            android:id="@+id/user_yanzhengma"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:background="@drawable/none_border_background"
            android:gravity="center_vertical"
            android:hint="输入短信验证码"
            android:inputType="number"
            android:textColor="@color/origin_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/send_meassage"
            android:text="获取验证码"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/yanzhengma_button_background"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/account_password_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/password_fig"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/password" />

        <EditText
            android:id="@+id/user_password"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/none_border_background"
            android:gravity="center_vertical"
            android:hint="输入密码6-15位数字或字母"
            android:inputType="textPassword"
            android:textColor="@color/origin_text_color"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"/>

        <com.example.ai.dtest.view.eye
            android:id="@+id/eye"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:id="@+id/change"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/rigster_login_background"
        android:text="修改"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>